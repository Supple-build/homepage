---
import type { MetaDataProps } from 'src/utilities/api/queries';
import getSanityImage from 'src/utilities/api/sanity/getSanityImage';
export interface Props extends MetaDataProps {
	skipPageSuffix?: boolean;
}

const { metaData, skipPageSuffix } = Astro.props;

const title = `${metaData.title}${
	!skipPageSuffix ? ' | Bram Smulders, Front-end UI developer' : ''
}`;

const ogImage = metaData.image
	? getSanityImage(metaData.image).width(1200).height(632).url()
	: undefined;
---

<meta charset="utf-8" />
<meta name="viewport" content="width=device-width, initial-scale=1" />
<meta name="generator" content={Astro.generator} />
<meta name="version" content={process.env.npm_package_version} />

<title>{title}</title>
<meta property="og:title" content={title} />
<meta name="twitter:title" content={title} />

{
	metaData.description ? (
		<>
			<meta name="description" content={metaData.description} />
			<meta name="twitter:description" content={metaData.description} />
			<meta property="og:description" content={metaData.description} />
		</>
	) : null
}

{
	ogImage ? (
		<>
			<meta property="og:image" content={ogImage} />
			<meta name="twitter:card" content="summary_large_image" />
			<meta name="twitter:image" content={ogImage} />
		</>
	) : null
}

<link rel="icon" type="image/svg+xml" href="/favicon.svg" />

{metaData.noIndex && <meta name="robots" content="noindex" />}
